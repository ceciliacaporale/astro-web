{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts", 
    "**/*"
  ],
  "exclude": [
    "dist",     
    "node_modules" 
  ],
  "compilerOptions": {
    "jsx": "react-jsx",               
    "jsxImportSource": "react",
    "strict": true,              
    "baseUrl": ".",   
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@styles/*": ["src/styles/*"]
    },
    "moduleResolution": "bundler",    
    "module": "ESNext",            
    "target": "ESNext",          
    "allowJs": true,       
    "esModuleInterop": true,       
    "resolveJsonModule": true
  }
}